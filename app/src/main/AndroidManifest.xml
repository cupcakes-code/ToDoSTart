<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Todor"
        tools:targetApi="31">
        <activity
            android:label="Edit Assessment"
            android:name=".EditAssessmentActivity"
            android:exported="false" />
        <activity
            android:label="Assessment Details"
            android:name=".AssessmentDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".EditCourseActivity"
            android:exported="false"
            android:label="Edit Course" />
        <activity
            android:name=".AddAssessmentActivity"
            android:exported="false"
            android:label="New Assessment" />
        <activity
            android:name=".CourseDetailActivity"
            android:exported="false"
            android:label="Course Details" />
        <activity
            android:name=".AddCourseActivity"
            android:exported="false"
            android:label="New Course" />
        <activity
            android:name=".TermDetailActivity"
            android:exported="false"
            android:label="Term Details"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddTermActivity"
            android:exported="false"
            android:label="New Term"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>